<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    tools:context=".DashboardActivity">

    <!-- Top Bar with User Profile and Logout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBarCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- User Avatar -->
            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/child_avatar"
                android:background="@drawable/avatar_background"
                android:padding="8dp"
                android:elevation="4dp" />

            <!-- Welcome Text Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello there! ðŸ‘‹"
                    android:textSize="18sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super Learner!"
                    android:textSize="24sp"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Logout Button -->
            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_logout"
                android:background="@drawable/logout_button_background"
                android:contentDescription="Logout"
                android:elevation="2dp"
                app:tint="@color/error" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/topBarCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Class Selection Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ’ Choose Your Class!"
                android:textSize="28sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your grade to start learning Math and Science!"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Class Selection Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row 1: Class 1 & 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Class 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/class1Card"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/primary_blue">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="1"
                                android:textSize="36sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-black"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Class 1"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age 6-7"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Class 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/class2Card"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/accent_green">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="2"
                                android:textSize="36sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-black"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Class 2"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age 7-8"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Row 2: Class 3 & 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Class 3 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/class3Card"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/accent_orange">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="3"
                                android:textSize="36sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-black"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Class 3"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age 8-9"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Class 4 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/class4Card"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/accent_purple">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="4"
                                android:textSize="36sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-black"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Class 4"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age 9-10"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Row 3: Class 5 (Centered) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <!-- Class 5 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/class5Card"
                        android:layout_width="180dp"
                        android:layout_height="140dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/error">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="5"
                                android:textSize="36sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-black"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Class 5"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age 10-11"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:alpha="0.8"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Progress Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:elevation="6dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒŸ Your Learning Journey"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Total Stars -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_star_filled"
                                android:layout_marginBottom="8dp"
                                app:tint="@color/accent_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textSize="20sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Stars"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <!-- Completed Lessons -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_trophy"
                                android:layout_marginBottom="8dp"
                                app:tint="@color/accent_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textSize="20sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lessons Done"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <!-- Current Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_fire"
                                android:layout_marginBottom="8dp"
                                app:tint="@color/error" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textSize="20sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day Streak"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Floating Elements for Fun -->
    <ImageView
        android:id="@+id/floatingElement1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_star_small"
        android:alpha="0.3"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/floatingElement2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_heart"
        android:alpha="0.3"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/floatingElement3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_rainbow"
        android:alpha="0.3"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>